<Window x:Class="CalculadoraDeIMC.Resultado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculadoraDeIMC"
        mc:Ignorable="d"
        Title="Resultado" Height="720" Width="1280"
        Background="Black"
        >
    <Grid>

        <StackPanel >
            <Image Source="/Imagem/TabelaDePesos.png" Width="800" VerticalAlignment="Top"/>
            <Image Source="/Imagem/TextoResultado.png" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox Name="txtResultado" Width="600" Margin="0,10,0,0" Height="70" TextAlignment="Center" BorderBrush="White" Background="White" FontSize="50" IsEnabled="False" Panel.ZIndex="2"/>
        </StackPanel>
        
    </Grid>
</Window>
